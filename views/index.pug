extends layout



block bloc_header
  header
    .wrap.clearfix
      a.logo(href='http://podcastscience.fm')
        img(src='images/PodcastScience.png', width='210', height='25', alt='PodcastScience')
      h1#title-episode 
      .rec Live


block bloc_player
  .player
    iframe(src="http://static.infomaniak.ch/infomaniak/radio/html/podcastscience_player.html",height="80",width="400",scrolling="no",frameborder="0",allowtransparency="true" )
  

block menu
  #menu_button.admin_class
    img(src="images/menu.png",height='25',width='25')
  #menu.admin_class.menu_hidden
    #admin_title 
      h2 Configuration
      ul
        li
          form#admin-form
            input(type="hidden" value='')#admin-password
            p
              label
                h4 Numéro de l'épisode
              input(type="text-area")#episode-number
            p
              label 
                h4 Titre de l'épisode
              input(type="text-area")#episode-title
            p
              label 
                h4 Hashtag spécifique (si nécessaire)
              | #
              input(type="text-area")#hashtag
            p.buttons
              button(type="submit").btn#send-admin Envoyer
              button(type="button").btn#reinitChatroomButton Réinitialiser
        li
          p
            h4 Dernier heartbeat twitter:&nbsp
              span#lasttheartbeat aucun



block bloc_login
  #login.login.clearfix
    h2
      | Connectez-vous
      span.small pour participer à la discussion!
    p#wrong-mail.ps_alert
    .info
      p
        | Pour avoir un joli avatar, créez le sur 
        a(href='http://fr.gravatar.com/') Gravatar
        | .
    form#loginform
      input(type="text" name="login" placeholder="Nom d'utilisateur")#username
      input(type="text" name="mail" placeholder="E-mail")#mail
      input(type="submit" value="Discuter")
      a#twitter_auth_link
        img(src='images/sign-in-with-twitter-link.png')






