extends layout


block login-form
  div#login
    div.alert.alert-error(style="display:none;")#wrong-mail
    form.form-inline#loginform(style="position:relative;padding-top='-100px';")      
      p
        | Connectez-vous pour participer à la discussion! (et pour avoir un joli avatar, créez le sur
        |  <a href="http://fr.gravatar.com/" target="_blank">Gravatar</a>
        |  )

      input(type="text" name="login" placeholder="Nom d'utilisateur")#username 
      input(type="text" name="mail" placeholder="E-mail")#mail 
      input.btn(type="submit") Envoyer

block message
  div#message-box(style="display: none;")
    ul.media-list
      li.media
        a.pull-left
          img(src="{{user.avatar}}")
        div.media-body
          h5(style="font-size:small;").media-heading {{user.username}}
          p(style="font-size:small;") {{message}}

block user_box
  div#user_box(style="display: none;")
    li.media(id="{{id}}")
      a.pull-left
        img(src="{{avatar}}")
      div.media-body
        p {{username}}

block message-form
  form.form-inline#message-form(style="display:none;")
    input(type="text-area")#message-to-send
    button(type="submit").btn#send-message Envoyer

block chatroom
  div.row-fluid
    div.span6.well(style="height:500px;")
      div.well#live-draw-frame le iframe sera la
      div.well#twitterShare(name="twitterShare" style="margin-right:20px; margin-top: 10px; font-family: Hero; color: rgb(131,131,131); font-size: 18px;") Partager
          a.pull-right(href="https://twitter.com/intent/tweet?button_hashtag=PodsourceLive&text=Rejoignez+nous+sur+la+chatroom+et+suivez+@@podsource+en+direct.&url=http://live.podsource.ch" target="_blank" style="margin-left: 5px;")
            img(src="/images/twtr-nt.png")
          a.pull-right(href="http://www.facebook.com/sharer/sharer.php?u=http%3A%2F%2Flive.podsource.ch&p[summary]=Rejoignez+nous+sur+la+chatroom+et+suivez+le+live+podsource+en+direct" target="_blank" style="margin-left: 5px;")
            img(src="/images/fb-nt.png")
          a.pull-right(href="https://plus.google.com/share?url=http://live.podsource.ch" target="_blank" style="margin-left: 5px;")
            img(src="/images/gplus-nt.png")
        
    div.span4.well(style="height:500px;")
      div#onChat
        div#main(style="height:440px; overflow:scroll;")
          div#messages.row-fluid
            block message
        block message-form

        
    div.span2.well(style="height:500px; overflow:scroll;")
      h4 En ligne
      ul.media-list#members-list
        block user_box





block content
  div.content
    block login-form
    block chatroom






